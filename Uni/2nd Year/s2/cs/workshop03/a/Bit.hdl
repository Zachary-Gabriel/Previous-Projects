/**
 * 1-bit register:
 * If load[t] == 1 then out[t+1] = in[t]
 *                 else out does not change (out[t+1] = out[t])
 */

CHIP Bit {
    IN in, load;
    OUT out;

    PARTS:
    MUX(in=a,in=b,load=load,out=c);
    DFF(c=c, out = a, out= out);
}
